# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET         /                                       controllers.Application.index

# Map static resources from the /public folder to the /assets URL path
GET         /assets/*file                           controllers.Assets.at(path="/public", file)


# log in/log out
GET         /login                                  controllers.Authentication.login
POST        /login                                  controllers.Authentication.doLogin
GET         /logout                                 controllers.Authentication.logout

# consent to publish
GET         /consent_to_publish/index               controllers.CopyrightTransfer.index
POST        /consent_to_publish                     controllers.CopyrightTransfer.consentByPost
GET         /consent_to_publish/:id                 controllers.CopyrightTransfer.consentByGet(id : Int)
POST        /consent_to_publish/submit              controllers.CopyrightTransfer.submit
POST        /consent_to_publish/confirmation        controllers.CopyrightTransfer.confirm(id : Int)
GET         /confirm/:token                         controllers.CopyrightTransfer.verify(token : String)
#authors
GET         /authors/:id/:year/:volume_id           controllers.Authors.list(id: Int, year: Int, volume_id: Int)

#ranking
GET         /ranking                                controllers.ReportGenerator.index
POST        /ranking                                controllers.ReportGenerator.submit

#lists
GET         /lists/authors                          controllers.Lists.index
POST        /lists/authors                          controllers.Lists.indexPost
GET         /lists/reviewers                        controllers.Lists.reviewers
POST        /lists/reviewers                        controllers.Lists.reviewersPost

# Debug
GET         /debug/dbtest                           controllers.DbTest.index