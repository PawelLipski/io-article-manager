# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET         /                                       controllers.Application.index

# Map static resources from the /public folder to the /assets URL path
GET         /assets/*file                           controllers.Assets.at(path="/public", file)


GET         /consent_to_publish                     controllers.CopyrightTransfer.index
POST        /consent_to_publish                     controllers.CopyrightTransfer.submit
POST        /consent_to_publish/confirmation        controllers.CopyrightTransfer.confirm

#authors
GET         /authors                                controllers.Authors.list
GET         /authors/add                            controllers.Authors.add
POST        /authors                                controllers.Authors.save
GET         /authors/:id/edit                       controllers.Authors.edit(id: Int)
POST        /authors/:id                            controllers.Authors.update(id: Int)
POST        /authors/:id/delete                     controllers.Authors.delete(id: Int)

#ranking
GET         /ranking                                controllers.ReportGenerator.index
POST        /ranking                                controllers.ReportGenerator.submit

#lists
GET         /lists/authors                          controllers.Lists.index
POST        /lists/authors                          controllers.Lists.indexPost
GET         /lists/reviewers                        controllers.Lists.reviewers
POST        /lists/reviewers                        controllers.Lists.reviewersPost

# Debug
GET         /debug/dbtest                           controllers.DbTest.index